<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="MediumUnit">
		<defName>MUGV_RP</defName>
		<label>MUGV_RP</label>
		<description>Medium attack unit1.</description>
		<statBases>
			<MoveSpeed>2</MoveSpeed>
			<!-- 移动速度 -->
		</statBases>
		<comps>
			<li Class="RTS.UnitCompProperties">
				<mass>200</mass>
				<cost>20</cost>
			</li>
			<li Class="RTS.CompProperties_TurretGun">
				<!-- 添加炮塔枪组件 -->
				<turretDef>MUGV_RP_Turret</turretDef>
				<littleCooldown>5</littleCooldown>
				<!-- 连射冷却 -->
				<extraShootCount>1</extraShootCount>
				<!-- 额外射击次数 -->
				<warmupTime>500</warmupTime>
				<!-- 冷却时间 -->
				<angleOffset>-90</angleOffset>
				<autoAttack>false</autoAttack>
				<renderNodeProperties>
					<li>
						<nodeClass>RTS.PawnRenderNode_TurretGun</nodeClass>
						<workerClass>RTS.PawnRenderNodeWorker_TurretGun</workerClass>
						<overrideMeshSize>(2.1, 2.1)</overrideMeshSize>
						<parentTagDef>Body</parentTagDef>
						<baseLayer>20</baseLayer>
						<pawnType>Any</pawnType>
						<drawData>
							<dataWest>
								<rotationOffset>180</rotationOffset>
							</dataWest>
						</drawData>
					</li>
				</renderNodeProperties>
			</li>
		</comps>
		<killedLeavingsPlayerHostile>
			<Steel>50</Steel>
		</killedLeavingsPlayerHostile>
	</ThingDef>


	<PawnKindDef ParentName="MediumUnitKind">
		<defName>MUGV_RP</defName>
		<label>MUGV_RP</label>
		<labelPlural>MUGV_RP</labelPlural>
		<race>MUGV_RP</race>
		<weaponTags>
		</weaponTags>
	</PawnKindDef>




	<ThingDef ParentName="BaseWeaponTurret">
		<defName>MUGV_RP_Turret</defName>
		<label>MUGV_RP_Turret</label>
		<description>MUGV_RP_Turret.</description>
		<tradeability>None</tradeability>
		<!-- 无法交易 -->
		<destroyOnDrop>true</destroyOnDrop>
		<!-- 抛弃时销毁 -->
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponRanged/MUGV_RP_Turret</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<Mass>2.6</Mass>
			<!-- 质量为 2.6 单位 -->
			<AccuracyTouch>0.30</AccuracyTouch>
			<!-- 触摸精度为 0.60 -->
			<AccuracyShort>0.50</AccuracyShort>
			<!-- 短距离精度为 0.80 -->
			<AccuracyMedium>0.30</AccuracyMedium>
			<!-- 中距离精度为 0.90 -->
			<AccuracyLong>0.1</AccuracyLong>
			<!-- 长距离精度为 0.85 -->
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<!-- 动作类 -->
				<defaultProjectile>Bullet_Rocket</defaultProjectile>
				<!-- 弹药类型 -->
				<forcedMissRadius>5</forcedMissRadius>
				<range>35</range>
				<!-- 射程 -->
				<soundCast>Shot_ChargeBlaster</soundCast>
				<!-- 发射时的声音效果 -->
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<!-- 发射尾声声音效果 -->
				<muzzleFlashScale>9</muzzleFlashScale>
				<!-- 枪口闪光比例 -->
				<defaultCooldownTime>0</defaultCooldownTime>
				<!-- 冷却时间 -->
				<warmupTime>0</warmupTime>
				<!-- 准备射击的时间 -->
				<linkedBodyPartsGroup>BulbTurret</linkedBodyPartsGroup>
				<!-- 关联的身体部位组 BulbTurret -->
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<!-- 确保关联的身体部位组始终可用 -->
				<ticksBetweenBurstShots>0</ticksBetweenBurstShots>
				<!-- 连射间隔 -->
				<burstShotCount>1</burstShotCount>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<!-- AI 避免友军火力半径 -->
				<ai_AvoidFriendlyFireRadius>6</ai_AvoidFriendlyFireRadius>
				<!-- AI 是建筑破坏者 -->
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
			</li>
		</verbs>
	</ThingDef>

</Defs>