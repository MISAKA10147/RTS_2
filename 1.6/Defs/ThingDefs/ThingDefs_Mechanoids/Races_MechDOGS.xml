			<!-- 近战对门的伤害系数 -->
		</statBases>
		<race>
			<baseHealthScale>2</baseHealthScale>
			<mechFixedSkillLevel>6</mechFixedSkillLevel>
			<baseBodySize>1</baseBodySize>
			<mechEnabledWorkTypes>
