<Defs>

	<!-- 笨笨 -->
	<ThingDef ParentName="LightUnit">
		<defName>WE_DOG</defName>
		<label>DOG</label>
		<description>A cheap and multi-functional mechanoid, used for maintaining and building colonies, with extremely limited manufacturing capabilities."Dynamic Omniterrain Guardian System"It is a kind of engineering unit cluster controlled by quantum supercomputer. It is popular in extraterrestrial colonization because of its excellent passing performance and affordable materials.</description>
		<statBases>
			<MarketValue>1200</MarketValue>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.5</ArmorRating_Blunt>
			<ArmorRating_Heat>1</ArmorRating_Heat>
			<MoveSpeed>6</MoveSpeed>
			<BandwidthCost>0</BandwidthCost>
			<!-- 带宽成本 -->
			<WastepacksPerRecharge MayRequire="Ludeon.Rimworld.Biotech">5</WastepacksPerRecharge>
			<WorkSpeedGlobal MayRequire="Ludeon.Rimworld.Biotech">1</WorkSpeedGlobal>
			<!-- 控制该机械体所需的时间 -->
			<ControlTakingTime>1</ControlTakingTime>
			<EMPResistance>0</EMPResistance>
			<!-- 对EMP（电磁脉冲）的抵抗力 -->
