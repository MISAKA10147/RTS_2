<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="RC_Turretbase">
		<!-- 定义名 -->
		<defName>Turret_RC_Railgun</defName>
		<!-- 显示标签 -->
		<label>RC_Railgun</label>
		<!-- 描述信息 -->
		<description>RC_Railgun.</description>
		<!-- UI图标路径 -->
		<uiIconPath>UI/UnitIcon/Building/RC_RailgunIcon</uiIconPath>
		<!-- 基础统计数据 -->
		<statBases>
			<ShootingAccuracyTurret>0.96</ShootingAccuracyTurret>
			<!-- 精准 -->
		</statBases>
		<!-- 成本列表 -->
		<costList>
			<Steel>500</Steel>
		</costList>
		<!-- 组件列表 -->
		<comps>
			<!-- 可爆炸组件 -->
			<li Class="CompProperties_Explosive">
				<wickTicks>240</wickTicks>
				<explosiveRadius>5.9</explosiveRadius>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<chanceNeverExplodeFromDamage>0.5</chanceNeverExplodeFromDamage>
			</li>
			<!-- 可禁止使用组件 -->
			<li Class="CompProperties_Forbiddable"/>
			<!-- 动力组件 -->
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>1000</basePowerConsumption>
			</li>
			<!-- 可开关组件 -->
			<li Class="CompProperties_Flickable"/>
		</comps>
		<!-- 构建相关属性 -->
		<building>
			<!-- 关联的武器定义 -->
			<turretGunDef>RC_RailgunTurret</turretGunDef>
			<!-- 发射间隔时间 -->
			<turretBurstCooldownTime>3.5</turretBurstCooldownTime>
			<turretBurstWarmupTime>0.5</turretBurstWarmupTime>
			<turretTopDrawSize>4</turretTopDrawSize>
		</building>
		<!-- 研究先决条件 -->
		<researchPrerequisites>
			<li>HeavyTurrets</li>
		</researchPrerequisites>
	</ThingDef>


	<ThingDef ParentName="BaseWeaponTurret">
		<!-- 定义名 -->
		<defName>RC_RailgunTurret</defName>
		<!-- 显示标签 -->
		<label>RC_RailgunTurret</label>
		<!-- 描述信息 -->
		<description>RC_RailgunTurret.</description>
		<!-- 图形数据 -->
		<graphicData>
			<!-- 纹理路径 -->
			<texPath>Things/Building/RC_Turretbase/RC_RailgunTurret</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<!-- 基础统计数据 -->
		<statBases>
			<AccuracyTouch>0.28</AccuracyTouch>
			<AccuracyShort>0.72</AccuracyShort>
			<AccuracyMedium>0.66</AccuracyMedium>
			<AccuracyLong>0.5</AccuracyLong>
			<RangedWeapon_Cooldown>3.5</RangedWeapon_Cooldown>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>40</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<!-- 动作列表 -->
		<verbs>
			<li>
				<!-- 射击动作类 -->
				<verbClass>Verb_Shoot</verbClass>
				<!-- 默认使用的弹药 -->
				<defaultProjectile>Bullet_Shell_Railgun</defaultProjectile>
				<!-- 准备射击的时间 -->
				<warmupTime>1</warmupTime>
				<!-- 最小射击距离 -->
				<minRange>3.9</minRange>
				<!-- 最大射击距离 -->
				<range>45</range>
				<!-- 连发间隔时间 -->
				<ticksBetweenBurstShots>3</ticksBetweenBurstShots>
				<!-- 每次连发数量 -->
				<burstShotCount>1</burstShotCount>
				<!-- 开火声音 -->
				<soundCast>Shot_Autocannon</soundCast>
				<!-- 尾声声音 -->
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<!-- 炮口火焰缩放比例 -->
				<muzzleFlashScale>6</muzzleFlashScale>
				<!-- 每次发射消耗的燃料 -->
				<!--<consumeFuelPerShot>1</consumeFuelPerShot> -->
				<forcedMissRadius>1</forcedMissRadius>
				<forcedMissEvenDispersal>true</forcedMissEvenDispersal>
				<targetParams>
					<!-- 允许定位目标 -->
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
			</li>
		</verbs>
	</ThingDef>




</Defs>