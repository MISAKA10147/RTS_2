<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="RC_Turretbase">
		<!-- 定义名 -->
		<defName>Turret_RC_Rocket</defName>
		<!-- 显示标签 -->
		<label>RC_Rocket</label>
		<!-- 描述信息 -->
		<description>RC_Rocket.</description>
		<!-- UI图标路径 -->
		<uiIconPath>UI/UnitIcon/Building/RC_RailgunIcon</uiIconPath>
		<!-- 基础统计数据 -->
		<statBases>
			<ShootingAccuracyTurret>0.33</ShootingAccuracyTurret>
			<!-- 精准 -->
		</statBases>
		<!-- 成本列表 -->
		<costList>
			<Steel>500</Steel>
		</costList>
		<!-- 组件列表 -->
		<comps>
			<!-- 可爆炸组件 -->
			<li Class="CompProperties_Explosive">
				<wickTicks>240</wickTicks>
				<explosiveRadius>5.9</explosiveRadius>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<chanceNeverExplodeFromDamage>0.5</chanceNeverExplodeFromDamage>
			</li>
			<!-- 可禁止使用组件 -->
			<li Class="CompProperties_Forbiddable"/>
			<!-- 动力组件 -->
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>1000</basePowerConsumption>
			</li>
			<!-- 可开关组件 -->
			<li Class="CompProperties_Flickable"/>
		</comps>
		<!-- 构建相关属性 -->
		<building>
			<!-- 关联的武器定义 -->
			<turretGunDef>RC_RocketTurret</turretGunDef>
			<!-- 发射间隔时间 -->
			<turretBurstCooldownTime>15</turretBurstCooldownTime>
			<turretBurstWarmupTime>5</turretBurstWarmupTime>
			<turretTopDrawSize>2</turretTopDrawSize>
		</building>
		<!-- 研究先决条件 -->
		<researchPrerequisites>
			<li>HeavyTurrets</li>
		</researchPrerequisites>
	</ThingDef>


	<ThingDef ParentName="BaseWeaponTurret">
		<!-- 定义名 -->
		<defName>RC_RocketTurret</defName>
		<!-- 显示标签 -->
		<label>RC_RocketTurret</label>
		<!-- 描述信息 -->
		<description>RC_RocketTurret.</description>
		<!-- 图形数据 -->
		<graphicData>
			<!-- 纹理路径 -->
			<texPath>Things/Building/RC_Turretbase/RC_RocketTurret</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<!-- 基础统计数据 -->
		<statBases>
			<AccuracyTouch>0.18</AccuracyTouch>
			<AccuracyShort>0.22</AccuracyShort>
			<AccuracyMedium>0.36</AccuracyMedium>
			<AccuracyLong>0.3</AccuracyLong>
			<RangedWeapon_Cooldown>5</RangedWeapon_Cooldown>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>40</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<!-- 动作列表 -->
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<!-- 动作类 -->
				<defaultProjectile>Bullet_Rocket</defaultProjectile>
				<!-- 弹药类型 -->
				<forcedMissRadius>5</forcedMissRadius>
				<range>50</range>
				<!-- 射程 -->
				<soundCast>Shot_ChargeBlaster</soundCast>
				<!-- 发射时的声音效果 -->
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<!-- 发射尾声声音效果 -->
				<muzzleFlashScale>9</muzzleFlashScale>
				<!-- 枪口闪光比例 -->
				<defaultCooldownTime>2</defaultCooldownTime>
				<!-- 冷却时间 -->
				<warmupTime>2</warmupTime>
				<!-- 准备射击的时间 -->
				<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
				<!-- 连射间隔 -->
				<burstShotCount>4</burstShotCount>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<!-- AI 避免友军火力半径 -->
				<ai_AvoidFriendlyFireRadius>6</ai_AvoidFriendlyFireRadius>
				<!-- AI 是建筑破坏者 -->
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
			</li>
		</verbs>
	</ThingDef>




</Defs>